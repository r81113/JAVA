Scanner input =new Scanner(System.in);	
	while(true) {	
	
		int level=input.nextInt();
		for(int i = 1;i<=level;i++) 		 			
		{
			for(int j=1;j<=level-i;j++) {
				
				System.out.print(" ");
			} 
			for(int j=1;j<=2*i-1;j++) {
				
				System.out.print("*");

			}
			System.out.println();

		}
}
      
